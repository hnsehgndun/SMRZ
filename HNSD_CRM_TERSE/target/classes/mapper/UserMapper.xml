<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.crm.mapper.UserMapper">
<!--    注册账号-->
    <insert id="addUser" parameterType="com.crm.beans.User">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="uid != null">
                uid,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="uphone != null">
                uphone
            </if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="uid != null">
                #{uid,jdbcType=VARCHAR},
            </if>
            <if test="password != null">
                #{password,jdbcType=VARCHAR},
            </if>
            <if test="uphone != null">
                #{uphone,jdbcType=VARCHAR}
            </if>
        </trim>
    </insert>

<!--    登录-->
    <select id="login" resultType="com.crm.beans.User">
        select * from user where 1=1
        <if test="uid !=null">
            and uid = #{uid}
        </if>
    </select>

    <select id="getUserByUid" resultType="java.lang.Boolean">
        <!--  返回1代表true  返回0代表false      -->
        <![CDATA[ select count(id) from user where uid=#{uid} ]]>
    </select>

    <select id="getAllUser" resultType="com.crm.beans.User">
        select * from user where 1=1
        <if test="uphone!= null and uphone !=''">
            and uphone like '%${uphone}%'
        </if>
        <if test="uid !=null and uid !=''">
            and uid like '%${uid}%'
        </if>
    </select>

    <update id="restPassword">
        update user set password =#{newpassword} where uid =#{uid}
    </update>
    
    <update id="updateuserInfo">
        update user set uphone =#{uphone} where uid =#{uid}
    </update>

    <!--判断是否已经进行实名认证-->
    <select id="selectRealName" resultType="com.crm.beans.User">
        select realname_flag from user where 1=1
        <if test="uid !=null and uid != ''">
            and uid = #{uid}
        </if>
    </select>

    <!--    实名认证后,向user表的realName中写入UserInfo的id-->
    <update id="setRealNameFlag">
        update user set
        <if test="userInfoId !=null and userInfoId != ''">
            realname_flag=#{userInfoId}
        </if>
        where
        <if test="uid !=null and uid != ''">
            uid=#{uid}
        </if>

    </update>
</mapper>